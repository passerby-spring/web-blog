{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": [
      "vite/client",
      "unplugin-vue-macros/macros-global",
      "vite-plugin-pages/client"
    ]
  },
  "exclude": ["dist", "node_modules"]
}
